{
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "esNext",
        "target": "esNext",
        "strict": true,
        "outDir": "dist",
        "baseUrl": ".",
        "rootDir": "./src",
        "sourceMap": true,
        "composite": true,
        "incremental": true,
        "declaration": true,
        "declarationMap": true,
        "experimentalDecorators": true,
        "useDefineForClassFields": true,
        "importHelpers": true,
        "removeComments": true
    },
    "exclude": [
        "**/node_modules"
    ],
    "include": [
        "src",
        "types"
    ]
}